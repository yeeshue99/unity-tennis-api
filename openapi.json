{
  "openapi": "3.0.0",
  "info": {
    "title": "Unity Tennis API",
    "version": "1.0.0",
    "description": "API documentation for Unity Tennis backend."
  },
  "paths": {
    "/brackets": {
      "get": {
        "summary": "Get all brackets",
        "responses": {
          "200": {
            "description": "A list of brackets."
          }
        }
      },
      "post": {
        "summary": "Create a new bracket",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tournament_id": { "type": "integer" },
                  "name": { "type": "string" }
                },
                "required": ["tournament_id", "name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Bracket created successfully."
          }
        }
      }
    },
    "/brackets/{bracket_id}/players": {
      "get": {
        "summary": "Get all players in a bracket",
        "parameters": [
          {
            "name": "bracket_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of players in the bracket."
          },
          "404": {
            "description": "Bracket not found or no players in the bracket."
          }
        }
      }
    },
    "/players": {
      "get": {
        "summary": "Get all players",
        "responses": {
          "200": {
            "description": "A list of players."
          }
        }
      },
      "post": {
        "summary": "Add a new player",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "gender": { "type": "string" },
                  "phone_number": { "type": "string" }
                },
                "required": ["name", "gender", "phone_number"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Player added successfully."
          }
        }
      }
    },
    "/players/{player_id}": {
      "delete": {
        "summary": "Remove a player from the registry",
        "parameters": [
          {
            "name": "player_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player removed successfully."
          },
          "404": {
            "description": "Player not found."
          }
        }
      }
    },
    "/tournaments/{tournament_id}/players": {
      "get": {
        "summary": "Get all players in a tournament",
        "parameters": [
          {
            "name": "tournament_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of players in the tournament."
          },
          "404": {
            "description": "Tournament not found or no players in the tournament."
          }
        }
      },
      "delete": {
        "summary": "Remove a player from a tournament",
        "parameters": [
          {
            "name": "tournament_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "player_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player removed from the tournament successfully."
          },
          "404": {
            "description": "Player not found in the tournament."
          }
        }
      }
    }
  }
}
